/* ------------------------------------------- */
/* 1. RESET E DESIGN SYSTEM (:ROOT) */
/* ------------------------------------------- */
:root {
    /* ================================================= */
    /* PALETA DE CORES */
    /* ================================================= */
    --cor-primaria: #004d99;     /* Azul Escuro Institucional (Principal) */
    --cor-secundaria: #ffc40d;   /* Amarelo Vivo (Destaque/Atenção) */
    --cor-acento: #00a2e8;       /* Azul Claro (Links/Hover/Ação) */
    
    --cor-texto-principal: #002e5c; /* Preto/Navy Escuro (Máximo Contraste) */
    --cor-texto-suave: #333333;   /* Texto comum */

    --cor-fundo-claro: #f4f7f9;    /* Fundo suave (body/seções alternadas) */
    --cor-fundo-card: #ffffff;     /* Branco Puro (Cartões) */

    --cor-status-sucesso: #28a745; /* Verde (Doação/Ação Positiva) */
    --cor-status-erro: #dc3545;    /* Vermelho (Erros/Validação) */
    
    /* ================================================= */
    /* TIPOGRAFIA HIERÁRQUICA */
    /* ================================================= */
    --fonte-principal: 'Inter', sans-serif;

    --tamanho-h1: 3rem;       /* 48px - Títulos de Página */
    --tamanho-h2: 2.25rem;    /* 36px - Títulos de Seção */
    --tamanho-h3: 1.875rem;   /* 30px - Subtítulos de Cartão/Grupo */
    --tamanho-lg: 1.25rem;    /* 20px - Destaques */
    --tamanho-base: 1rem;     /* 16px - Corpo do texto */
    --tamanho-sm: 0.875rem;   /* 14px - Notas/Detalhes */
    --tamanho-xs: 0.75rem;    /* 12px - Rodapé/Metadados */
    
    /* ================================================= */
    /* ESPAÇAMENTO MODULAR */
    /* ================================================= */
    --espaco-xs: 0.5rem;    /* 8px */
    --espaco-sm: 1rem;      /* 16px */
    --espaco-md: 1.5rem;    /* 24px */
    --espaco-lg: 2rem;      /* 32px */
    --espaco-xl: 3rem;      /* 48px */
    --espaco-xxl: 4rem;     /* 64px */

    /* Sombras */
    --sombra-card: 0 4px 12px rgba(0, 0, 0, 0.08); /* Sombra mais suave e elevada */
}

