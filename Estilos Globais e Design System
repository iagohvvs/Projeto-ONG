}

/* Validação Nativa (Acessibilidade e UX) */
input:invalid:not(:focus):not(:placeholder-shown),
select:invalid:not(:focus):not(:placeholder-shown) {
    border: 2px solid var(--cor-status-erro);
}

input:valid:not(:focus):not(:placeholder-shown),
select:valid:not(:focus):not(:placeholder-shown) {
    border: 2px solid var(--cor-status-sucesso);
}


